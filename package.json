{
  "name": "jira-release-action",
  "version": "1.0.0",
  "private": true,
  "description": "Jira Release action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src/**/*.ts",
    "format-check": "prettier --check src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --minify --no-source-map-register --license licenses.txt",
    "test": "jest --passWithNoTests",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StalemateInc/jira-release-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Nicolas Charpentier",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "axios": "^0.27.2"
  },
  "devDependencies": {
    "@types/jest": "^29.0.2",
    "@types/node": "^16.11.57",
    "@typescript-eslint/parser": "^5.37.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.23.1",
    "eslint-plugin-github": "^4.4.1",
    "eslint-plugin-jest": "^27.0.4",
    "jest": "^29.0.3",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3"
  }
}
